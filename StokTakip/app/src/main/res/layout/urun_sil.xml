<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3E80B4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Seçili ürünü sil"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/urunSilYatay1"
        app:layout_constraintEnd_toStartOf="@+id/urunSilDikey3"
        app:layout_constraintStart_toStartOf="@+id/urunSilDikey1"
        app:layout_constraintTop_toTopOf="@+id/urunSilYatay" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#3E80B4"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView

            android:id="@+id/cardViewEvet"
            android:backgroundTint="#F29900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/textViewEvet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Evet" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHayir"
            android:layout_width="wrap_content"
            android:backgroundTint="#F29900"
            android:layout_height="wrap_content"
            android:layout_margin="15sp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/textViewHayir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Hayır" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>